<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_exercicio_add_exerc_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:context="com.example.thainara.personalcontrol.ExercicioActivity">

    <android.support.design.widget.TextInputLayout
        style="@style/TextInput">

        <android.support.v7.widget.AppCompatEditText
            style="@style/TextInput"
            android:id="@+id/activity_exercicio_nome_edit"
            android:inputType="text"
            android:hint="Nome"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/TextInput">

        <MultiAutoCompleteTextView
            android:id="@+id/activity_exercicio_descricao_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descrição"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/TextInput">

        <com.example.thainara.personalcontrol.MaskedEditText
            style="@style/TextInput"
            android:id="@+id/activity_exercicio_duracao_edit"
            android:inputType="numberDecimal"
            android:hint="Duração"
            app:mask="99:99 h"
            />
    </android.support.design.widget.TextInputLayout>

    <Button
        style="@style/Button"
        android:id="@+id/activity_exercicio_salvar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:layout_marginTop="10dp"
        />
</LinearLayout>
