<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thainara.personalcontrol" >

    <application
        android:name=".PCApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="Personal Control"
            android:screenOrientation="portrait" > <!-- Tela inicial -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ExercicioActivity"
            android:label="@string/title_activity_exercicio"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".AtividadeActivity"
            android:label="@string/title_activity_atividade"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
        </activity>
        <activity android:name=".RelatorioActivity" >
        </activity>
    </application>

</manifest>
